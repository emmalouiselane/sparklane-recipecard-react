{
  "name": "@sparklane.dev/sparklane-recipecard-react",
  "version": "1.0.8",
  "description": "A reusable React component for displaying recipe cards with name, image, and rating",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/RecipeCard.css": "./dist/RecipeCard.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "component",
    "recipe",
    "card",
    "rating",
    "ui"
  ],
  "author": "Emma Lane - Spark Lane Dev (https://sparklane.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emmalouiselane/sparklane-recipecard-react"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:lib": "tsc -p tsconfig.build.json && node scripts/copy-assets.js && node scripts/fix-imports.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepublishOnly": "npm run build:lib"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
